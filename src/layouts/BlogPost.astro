---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="bg-white font-serif text-gray-900">
		<Header />
		<main class="max-w-3xl mx-auto px-4 py-8">
			<article>
				<header class="mb-8 text-center">
					<div class="mb-4">
						<FormattedDate date={pubDate} />
						{
							updatedDate && (
								<div class="font-sans text-sm text-gray-500 italic mt-1">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
					<h1 class="font-display text-4xl md:text-5xl font-bold text-black mb-6">{title}</h1>
					<hr class="border-gray-300 max-w-xs mx-auto" />
				</header>
				<div class="prose prose-lg max-w-none">
					<slot />
				</div>
			</article>
		</main>
	</body>
</html>
